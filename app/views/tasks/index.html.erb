<div>
  <h1>My tasks</h1>
  <ul>
    <% @tasks.each do |task|%>
      <li><%= link_to "#{task.title}", task_path(task[:id]) %></li>
      <%= link_to "Delete", delete_path(task.id), data: {turbo_method: :delete, turbo_confirm: "Delete #{task.title}?"} %>
    <% end %>
  </ul>
  <%= link_to 'Add a new task', new_path %>
</div>
